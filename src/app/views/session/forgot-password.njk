{% extends "layout.njk" %}

{% block content %}

    <section class="password container form">
    
        <form method="POST" action="/users/forgot-password"> 
            
            <div class="header">
                <h3>Esqueceu a senha?</h3>
            </div>

            <div class="fields">
               <div class="item">
                  <div>Email</div>
                  <div class="input">
                     <input 
                        type="email" 
                        name="email"
                        placeholder="Digite o email cadastrado"
                        value="{{user.email}}"
                        onblur="Validate.apply(this, 'isEmail')"
                     >
                  </div>
               </div>
            </div>

            <button class="button" type="submit">Recuperar Senha</button>

            <div class="footer">
               <ul>
                  <li>
                     <a href="/users/register">Registre-se</a>
                  </li>
                  <li>
                     <a href="/users/forgot-password">Esqueci minha senha</a>
                  </li>
               </ul>
            </div>
        
        </form>
    
    </section>
    
    
{% endblock content %}