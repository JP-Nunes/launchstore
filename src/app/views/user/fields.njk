<div class="item">
    <div>Nome Completo</div>
    <div class="input">
        <input 
            type="text" 
            name="name"
            placeholder="Seu nome completo aqui"
            value="{{ user.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
            type="email" 
            name="email"
            placeholder="Seu melhor email aqui"
            value="{{ user.email }}"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
            type="password" 
            name="password"
            placeholder="Sua senha aqui"
        >
    </div>
</div>

{% if not user.id %}

<div class="item">
    <div>Repita sua senha</div>
    <div class="input">
        <input 
            type="password" 
            name="passwordRepeat"
            placeholder="Por favor, repita a senha"
        >
    </div>
</div>

{% endif %}

<div class="item">
    <div>CPF ou CNPJ</div>
    <div class="input">
        <input 
            type="text" 
            name="cpf_cnpj"
            placeholder="CPF ou CNPJ"
            value="{{ user.cpf_cnpj }}"
            onkeydown="Mask.apply(this, 'cpfCnpj')"
            onblur="Validate.apply(this, 'isCpfCnpj')"
        >
    </div>
</div>

<div class="item">
    <div>CEP</div>
    <div class="input">
        <input 
            type="text" 
            name="cep"
            placeholder="00000-000"
            value="{{ user.cep }}"
            onkeydown="Mask.apply(this, 'cep')"
            onblur="Validate.apply(this, 'isCep')"
        >
    </div>
</div>

<div class="item">
    <div>Endereço Completo</div>
    <div class="input">
        <input 
            type="text" 
            name="address"
            placeholder="Seu endereço completo aqui"
            value="{{ user.address }}"
        >
    </div>
</div>